{
  "name": "boss-battle",
  "description": "Deep session danger: boss battles, storms, panic, and battle music.",
  "lines": [
    {
      "left": ["model-name", "directory", "git-branch", "git-status"],
      "right": ["lines-changed", "session-timer"]
    },
    {
      "left": ["context-bar"],
      "right": ["weather-report", "soundtrack", "session-cost"]
    },
    {
      "left": ["tamagotchi", "battle-log", "smart-nudge"],
      "right": ["emoji-story"]
    }
  ],
  "separator": " ",
  "segments": {
    "model-name": {
      "style": "bold cyan",
      "icon": true
    },
    "directory": {
      "style": "blue",
      "format": "fish"
    },
    "git-branch": {
      "style": "green",
      "icon": false,
      "maxLength": 25
    },
    "git-status": {
      "style": "yellow",
      "format": "short"
    },
    "lines-changed": {
      "style": "dim",
      "hideIfZero": true
    },
    "session-timer": {
      "style": "dim"
    },
    "context-bar": {
      "width": 15,
      "charFilled": "\u2588",
      "charEmpty": "\u2591",
      "warnAt": 60,
      "criticalAt": 80,
      "showPercent": true,
      "styleOk": "green",
      "styleWarn": "bold yellow",
      "styleCritical": "bold red"
    },
    "weather-report": {},
    "soundtrack": {
      "showEmoji": true
    },
    "session-cost": {
      "style": "white",
      "format": "$",
      "styleWarn": "bold yellow",
      "styleCritical": "bold red"
    },
    "tamagotchi": {},
    "battle-log": {},
    "smart-nudge": {},
    "emoji-story": {
      "style": ""
    }
  }
}
