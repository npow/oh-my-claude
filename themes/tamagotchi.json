{
  "name": "tamagotchi",
  "description": "Personality-forward: tamagotchi pet, growing garden, draining coffee, and vibes.",
  "lines": [
    {
      "left": ["model-name", "directory", "git-branch", "git-status"],
      "right": ["lines-changed", "session-timer"]
    },
    {
      "left": ["context-bar"],
      "right": ["soundtrack", "session-cost"]
    },
    {
      "left": ["tamagotchi", "garden", "coffee-cup"],
      "right": ["vibe-check", "achievement"]
    }
  ],
  "separator": " ",
  "segments": {
    "model-name": {
      "style": "bold cyan",
      "icon": true
    },
    "directory": {
      "style": "blue",
      "format": "basename"
    },
    "git-branch": {
      "style": "green",
      "icon": false,
      "maxLength": 25
    },
    "git-status": {
      "style": "yellow",
      "format": "short"
    },
    "lines-changed": {
      "style": "dim",
      "hideIfZero": true
    },
    "session-timer": {
      "style": "dim"
    },
    "context-bar": {
      "width": 15,
      "charFilled": "\u2588",
      "charEmpty": "\u2591",
      "warnAt": 60,
      "criticalAt": 80,
      "showPercent": true,
      "styleOk": "green",
      "styleWarn": "bold yellow",
      "styleCritical": "bold red"
    },
    "soundtrack": {
      "showEmoji": true
    },
    "session-cost": {
      "style": "dim",
      "format": "$"
    },
    "tamagotchi": {},
    "garden": {},
    "coffee-cup": {},
    "vibe-check": {
      "showEmoji": true
    },
    "achievement": {
      "style": "bold cyan"
    }
  }
}
