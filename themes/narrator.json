{
  "name": "narrator",
  "description": "Storytelling: third-person narration, vibes, growing garden, and streaks.",
  "lines": [
    {
      "left": ["model-name", "directory", "git-branch"],
      "right": ["lines-changed", "session-timer"]
    },
    {
      "left": ["context-bar", "weather-report"],
      "right": ["session-cost"]
    },
    {
      "left": ["narrator"],
      "right": ["vibe-check", "garden", "streak"]
    }
  ],
  "separator": " ",
  "plugins": {
    "model-name": {
      "style": "bold cyan",
      "icon": true
    },
    "directory": {
      "style": "blue",
      "format": "fish"
    },
    "git-branch": {
      "style": "green",
      "icon": false,
      "maxLength": 25
    },
    "lines-changed": {
      "style": "dim",
      "hideIfZero": true
    },
    "session-timer": {
      "style": "dim"
    },
    "context-bar": {
      "width": 15,
      "charFilled": "\u2588",
      "charEmpty": "\u2591",
      "warnAt": 60,
      "criticalAt": 80,
      "showPercent": true,
      "styleOk": "green",
      "styleWarn": "bold yellow",
      "styleCritical": "bold red"
    },
    "weather-report": {},
    "session-cost": {
      "style": "dim",
      "format": "$"
    },
    "narrator": {
      "style": "dim italic"
    },
    "vibe-check": {
      "showEmoji": true
    },
    "garden": {},
    "streak": {
      "minDays": 3
    }
  }
}
