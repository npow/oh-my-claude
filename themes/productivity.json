{
  "name": "productivity",
  "description": "Time-aware statusline. Clock, work/break cycle, day progress, break reminders.",
  "lines": [
    {
      "left": ["model-name", "directory", "git-branch", "git-status", "activity"],
      "right": ["package-version", "git-last-commit", "clock"]
    },
    {
      "left": ["context-bar", "day-progress"],
      "right": ["work-cycle", "session-cost"]
    }
  ],
  "separator": " ",
  "plugins": {
    "model-name": {
      "style": "bold cyan",
      "icon": false
    },
    "directory": {
      "style": "white",
      "format": "basename"
    },
    "git-branch": {
      "style": "green",
      "icon": false,
      "maxLength": 25
    },
    "git-status": {
      "style": "yellow",
      "format": "short"
    },
    "package-version": {
      "style": "dim",
      "prefix": "v"
    },
    "git-last-commit": {
      "style": "dim"
    },
    "clock": {
      "style": "white",
      "format24": false,
      "showSeconds": false
    },
    "context-bar": {
      "width": 15,
      "charFilled": "\u2593",
      "charEmpty": "\u2591",
      "warnAt": 60,
      "criticalAt": 80,
      "showPercent": true,
      "styleOk": "green",
      "styleWarn": "bold yellow",
      "styleCritical": "bold red"
    },
    "day-progress": {
      "style": "dim",
      "width": 8,
      "startHour": 9,
      "endHour": 17
    },
    "work-cycle": {
      "style": "green",
      "styleBreak": "bold cyan",
      "workMins": 25,
      "breakMins": 5
    },
    "session-cost": {
      "style": "dim",
      "format": "$"
    },
    "activity": {
      "style": "dim"
    }
  }
}
